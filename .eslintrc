{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "no-unused-vars": "warn"
  },
  "env": {
    "node": true,
    "jest": true,
    "browser": true
  },
  "plugins": [
    "react"
    ],
  "extends": [
    "eslint:recommended"
    ],
  "settings": {
    "react": {
      "pragma": "React"
    }
  }
}

